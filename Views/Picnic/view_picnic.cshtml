@{
    ViewData["Title"] = "Picnic - Proyecto";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <!-- Encabezado -->
        <div class="bg-primary text-white text-center py-3">
            <h1>Picnic en El Salvador</h1>
        </div>

        <!-- Contenido principal -->
        <div class="container my-4">
            <div class="row">
                <!-- Resultados -->
                <div class="col-md-12">
                    <h4>Anuncios de Picnic</h4>

                    <!-- Tarjetas de resultados para Picnic -->
                    <div class="row row-cols-1 row-cols-md-2 g-4">
                        <div class="col">
                            <div class="card">
                                <img src="~/images/elboqueron.jpeg" alt="elboqueron" class="img-fluid" />
                                <div class="card-body">
                                    <h5 class="card-title">Picnic en el Boqueron</h5>
                                    <p class="card-text">Disfruta de un día de picnic junto al lago en un ambiente natural, ideal para familias y grupos.</p>
                                    <a href="#" class="btn btn-primary">Ver más</a>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="card">
                                <img src="~/images/pital.jpeg" alt="pital" class="img-fluid" />
                                <div class="card-body">
                                    <h5 class="card-title">Picnic en el  Cerro El Pital</h5>
                                    <p class="card-text">Disfruta de la naturaleza salvadoreña en el Cerro El Pital.</p>
                                    <a href="@Url.Action("Create", "TblReservas")" class="btn btn-primary">Reservar</a>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
