@{
    ViewData["Title"] = "ViewCliente";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proyecto</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <!-- Encabezado -->
        <div class="bg-primary text-white text-center py-3">
            <h1>TODO TURISMO SISTEMAS</h1>
            <nav class="d-flex justify-content-center">
                <a href="@Url.Action("view_quehacer", "TblUsuarios")" class="text-white mx-3">Qué Hacer</a>
            </nav>
        </div>
    </div>

        <!-- Contenido principal -->
        <div class="container my-4">
            <div class="row">
                <!-- Filtros -->
                <div class="col-md-3">
                    <h4>Categorías</h4>
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <a href="@Url.Action("Index", "Picnic")">Picnic</a>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <a href="@Url.Action("Index", "Piscina")">Piscinas</a>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <a href="@Url.Action("Index", "Cabana")">Cabañas en Turicentro</a>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <a href="@Url.Action("Index", "Actividad")">Actividades</a>
                        </li>
                    </ul>
                </div>

                <!-- Resultados -->
                <div class="col-md-9">
                    <!-- Anuncios Destacados -->
                    <h4>Anuncios Destacados</h4>
                    <div class="row row-cols-1 row-cols-md-2 g-4">
                        <div class="col">
                            <div class="card">
                                <img src="~/images/elboqueron.jpeg" alt="elboqueron" class="card-img-top img-fluid" />
                                <div class="card-body">
                                    <h5 class="card-title">Picnic en el Boqueron</h5>
                                    <p class="card-text">Disfruta de un día de picnic junto al lago en un ambiente natural, ideal para familias y grupos.</p>
                                    <a href="#" class="btn btn-primary">Ver más</a>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="card">
                                <img src="~/images/los-chorros.jpg" alt="los-chorros" class="card-img-top img-fluid" />
                                <div class="card-body">
                                    <h5 class="card-title">Piscina Turicentro Los Chorros</h5>
                                    <p class="card-text">Relájate en las cálidas aguas de este famoso turicentro con vistas espectaculares.</p>
                                    <a href="#" class="btn btn-primary">Ver más</a>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="card">
                                <img src="~/images/cabana1.jpg" alt="cabana1" class="card-img-top img-fluid" />
                                <div class="card-body">
                                    <h5 class="card-title">Cabaña en el Turicentro Los Volcanes</h5>
                                    <p class="card-text">Pasa un fin de semana en una cabaña rodeada de la belleza natural de El Salvador.</p>
                                    <a href="#" class="btn btn-primary">Ver más</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div> <!-- Fin de resultados -->
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
