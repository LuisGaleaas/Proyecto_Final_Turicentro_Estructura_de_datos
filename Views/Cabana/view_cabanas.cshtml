@{
    ViewData["Title"] = "Cabañas en Turicentro - Proyecto";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <!-- Encabezado -->
        <div class="bg-primary text-white text-center py-3">
            <h1>Cabañas en Turicentro en El Salvador</h1>
        </div>

        <!-- Contenido principal -->
        <div class="container my-4">
            <div class="row">
                <!-- Resultados -->
                <div class="col-md-12">
                    <h4>Anuncios de Cabañas en Turicentro</h4>

                    <!-- Tarjetas de resultados para Cabañas -->
                    <div class="row row-cols-1 row-cols-md-2 g-4">
                        <div class="col">
                            <div class="card">
                                <img src="~/images/cabana1.jpg" alt="cabana1" class="img-fluid" />      
                                <div class="card-body">
                                    <h5 class="card-title">Cabaña en el Turicentro Los Volcanes</h5>
                                    <p class="card-text">Pasa un fin de semana en una cabaña rodeada de la belleza natural de El Salvador.</p>
                                    <a href="#" class="btn btn-primary">Ver más</a>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="card">
                                <img src="~/images/cabana2.jpeg" alt="cabana2" class="img-fluid" />
                                <div class="card-body">
                                    <h5 class="card-title">Cabaña en el Lago de Coatepeque</h5>
                                    <p class="card-text">Disfruta de la tranquilidad del lago con una cabaña privada a orillas del agua.</p>
                                    <a href="#" class="btn btn-primary">Ver más</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
